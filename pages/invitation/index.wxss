/* pages/invitation/index.wxss */

.container {
  background: url('http://pcgm4rcvg.bkt.clouddn.com/new_invite_page.jpg') no-repeat center;
  background-size: cover;
  width: 750rpx;
  height: 100vh;
}

.date {
  text-align: center;
  font-size: 30rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
}

.name {
  width: 400rpx;
  margin: 0 auto;
  min-height: 0;
  overflow: hidden;
  margin-top: 20rpx;
}

.savethedate {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.savethedate image {
  width: 200rpx;
  height: 200rpx;
}

.diamond {
  width: 400rpx;
  height: 59rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.diamond image {
  width: 400rpx;
  height: 59rpx;
}

.address {
  text-align: center;
  padding: 20rpx;
  font-size: 34rpx;
  line-height: 40rpx;
}

.s_icon {
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}

.s_icon image {
  width: 60rpx;
  height: 60rpx;
}

.words {
  width: 400rpx;
  height: 96rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.words image {
  width: 400rpx;
  height: 96rpx;
}

.tel {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  margin: 0 auto;
  min-height: 0;
  overflow: hidden;
  text-align: center;
  font-size: 20rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

/* display: flex;
  flex-flow: row;
  justify-content: center; */

.tel_he {
  width: 250rpx;
  float: left;
}

.tel_she {
  width: 250rpx;
  float: right;
}

.call {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 0 auto;
}

.call image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}
